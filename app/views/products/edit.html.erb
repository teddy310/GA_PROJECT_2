<div class="productform">
<%= form_for @product, html: { multipart: true } do |f| %>
  <% if @product.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @product.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <h1>Edit Product</h1>

  <div class="form-group"> <%= f.text_field :title, placeholder: "Product Title" %> </div>

  <div class="form-group"> <%= f.text_area :description, placeholder: "Product Description" %> </div>

  <div class="form-group"> <%= f.number_field :price, placeholder: "Contribution Price" %> </div>

  <div class="imagefield">
  <div class="form-group"> <%= f.file_field :image %> </div>
</div>
  <div class="actions">
    <%= f.submit %>

<div class="btn btn-danger"><%= link_to 'Delete Product', @product, method: :delete, data: { confirm: 'Are you sure?' }%></div><br>

  </div>
<% end %>
