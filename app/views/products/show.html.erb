<div class="page-header">
  <h1><%= @product.title %><small> <%= @product.description %> </small></h1>
</div>
  <p> <%= @product.price %></p>


  <p> <% @product.contributions.each do |c| %></p>

  <p> <%= c.user.first_name %></p>

  <%end%>


    <%= link_to "contribute", contribute_path(@product) %>

  <%= link_to image_tag(@product.image.url(:med)), @product.image.url %>

  <% if @product.user_id == current_user.id %>
  <%= link_to "edit product", edit_product_path(@product)%>
  <% end %>
